<div class="container p-4">
    <div class="row justify-content-center">
        <h3 class="text-center text-primary">Listado de Profesores</h3>
    </div>

    <!-- Mostrar alerta de éxito -->
    {{#if success}}
    <div class="alert alert-success">
        {{success}}
    </div>
    {{/if}}

    <!-- Mostrar alerta de error -->
    {{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{/if}}

    <div class="row justify-content-center mt-4">
        <div class="col-sm-6 text-right">
            <a href="/profesores/agregar" class="btn btn-success btn-lg text-white">Agregar Profesor</a>
        </div>
    </div>

    <div class="col-sm-12 mt-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Profesión</th>
                    <th scope="col">Email</th>
                    <th scope="col">Género</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each profesores}}
                <tr>
                    <th scope="row">{{idprofesor}}</th>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{profesion}}</td>
                    <td>{{email}}</td>
                    <td>{{genero}}</td>
                    <td>
                        <a href="/profesores/editar/{{idprofesor}}" class="btn btn-primary btn-sm text-white">Modificar</a>
                        <a href="/profesores/eliminar/{{idprofesor}}" class="btn btn-danger btn-sm text-white">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

