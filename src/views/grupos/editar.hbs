<div class="container p-4">
    <h1>Editar Grupo</h1>
    <form action="/grupos/editar/{{idgrupo}}" method="POST">
        <div class="form-group">
            <label for="nombregrupo">Nombre del Grupo</label>
            <input type="text" id="nombregrupo" name="nombregrupo" class="form-control" value="{{grupo.nombregrupo}}" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Actualizar</button>
        </div>
    </form>
</div>
