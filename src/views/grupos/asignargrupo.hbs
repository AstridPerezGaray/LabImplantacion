<div class="container p-4"> 
    <div class="row justify-content-center"> 
        <h1 class="text-center text-primary">Asignar Grupo</h1> 
    </div> 

    <div class="row justify-content-center mt-4"> 
        <div class="col-md-4"> 
            <!-- Selección de Estudiantes -->
            <div class="form-group mb-3">
                <label for="estudiante" class="font-weight-bold">Seleccionar Estudiante</label>
                <select class="form-control" id="estudiante">
                    <option value="" disabled>Seleccione una opción</option>
                    {{#each lstEstudiantes}} 
                    <option value="{{idestudiante}}">{{nombre}}</option> 
                    {{/each}} 
                </select> 
            </div>

            <!-- Campo oculto para ID del grupo -->
            <div hidden> 
                <input type="hidden" id="idgrupo" value="{{idgrupo}}" /> 
            </div>

            <!-- Botón para agregar estudiante -->
            <div class="form-group text-center mb-3">
                <button onclick="agregarEstudiante()" class="btn btn-success btn-lg btn-block">Agregar</button>
            </div>
        </div> 

        <!-- Tabla de Estudiantes Asignados -->
        <div class="col-sm-12 mt-4"> 
            <form action="/grupos/asignargrupo" method="POST" class="form-ajax"> 
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Código</th>
                            <th scope="col">Estudiante</th>
                            <th scope="col">Opciones</th>
                        </tr>
                    </thead>
                    <tbody id="contenido_tabla"></tbody> 
                </table> 
                <div id="data" hidden></div> 
                
                <!-- Botón para guardar los cambios -->
                <div class="form-group text-center mb-3">
                    <button class="btn btn-success btn-block" id="enviarDatos">Guardar</button> 
                </div> 
            </form> 
        </div> 
    </div> 
</div>

