<div class="container p-4">
    <div class="row justify-content-center">
        <h3 class="text-center text-primary">Agregar Grupo</h3>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="POST" class="p-4 border rounded shadow-sm bg-light">
                <!-- Número del Grupo -->
                <div class="form-group mb-3">
                    <label for="num_grupo" class="font-weight-bold">Número del Grupo</label>
                    <input type="text" id="num_grupo" class="form-control" name="num_grupo"
                           placeholder="Ejemplo: A01" pattern="[A-Za-z0-9]{1,3}"
                           title="Ingrese un número de grupo válido (hasta 3 caracteres alfanuméricos)" required />
                    <small class="form-text text-muted">Máximo 3 caracteres alfanuméricos.</small>
                </div>

                <!-- Año -->
                <div class="form-group mb-3">
                    <label for="anio" class="font-weight-bold">Año</label>
                    <input type="number" id="anio" class="form-control" name="anio"
                           placeholder="Año" min="2000" max="2100" required />
                </div>

                <!-- Ciclo -->
                <div class="form-group mb-3">
                    <label for="ciclo" class="font-weight-bold">Ciclo</label>
                    <input type="number" id="ciclo" class="form-control" name="ciclo"
                           placeholder="Ciclo" min="1" max="3" required />
                    <small class="form-text text-muted">El ciclo debe ser entre 1 y 3.</small>
                </div>

                <!-- Materia -->
                <div class="form-group mb-3">
                    <label for="idmateria" class="font-weight-bold">Materia</label>
                    <select id="idmateria" class="form-control" name="idmateria" required>
                        <option value="" disabled selected>Seleccione una materia</option>
                        {{#each lstMaterias}}
                            <option value="{{idmateria}}">{{materia}}</option>
                        {{/each}}
                    </select>
                </div>

                <!-- Profesor -->
                <div class="form-group mb-3">
                    <label for="idprofesor" class="font-weight-bold">Profesor</label>
                    <select id="idprofesor" class="form-control" name="idprofesor" required>
                        <option value="" disabled selected>Seleccione un profesor</option>
                        {{#each lstProfesores}}
                            <option value="{{idprofesor}}">{{nombre}} {{apellido}}</option>
                        {{/each}}
                    </select>
                </div>

                <!-- Botón de Guardar -->
                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

